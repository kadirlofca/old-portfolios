---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---

<a
  class="group flex max-w-[24.5rem] cursor-pointer flex-col gap-itemwide rounded-md border border-kroger-highlight p-4 transition-all duration-200 hover:px-6"
  href={`/posts/${slug}`}
>
  <div
    class="flex w-full flex-col justify-between gap-itemwide md:flex-row md:items-center"
  >
    <p class="text-lg text-kroger-highlight">{title}</p>
    <div class="flex flex-row items-center gap-itemwide">
      <p>{formatDate(publishedAt)}</p>

      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-200"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#000000"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
        </path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#000000"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
        </path>
      </svg>
    </div>
  </div>

  <p class="truncate">
    {description}
  </p>
</a>
