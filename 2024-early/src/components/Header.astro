---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import SocialLinks from "@/components/SocialLinks.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
  class="z-40 flex w-full flex-col gap-itemwide border-b border-kroger-neutral pb-8 md:flex-row md:justify-between"
>
  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-itemwide">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-kroger-highlight"]: true,
            ["text-kroger-highlight"]: pathname === "/",
          }}
        >
          Home
        </a>
      </li>
      <li>/</li>
      <!-- <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-kroger-highlight"]: true,
            ["text-kroger-highlight"]: pathname === "/posts",
          }}
        >
          Posts
        </a>
      </li>
      <li>/</li> -->
      <li>
        <a
          href="/projects"
          class:list={{
            ["hover:text-kroger-highlight"]: true,
            ["text-kroger-highlight"]: pathname === "/projects",
          }}
        >
          Projects
        </a>
      </li>
    </ul>
  </nav>

  <SocialLinks />
</header>
